#!/usr/bin/env ruby

$DONTMODIFY = true
%w[return_variable return_variable/version].each do |x|
  require File.join(File.dirname(__FILE__), '..', 'lib', "#{x}.rb")
end

# I have no clue what the fuck this is, but it lets me use #!ruby-return-variable shebang lines
if ARGV.length > 1 && !File.exist?(ARGV[0]) && File.exist?(ARGV[1])
  ReturnVariable.new(ARGV[1])
elsif ARGV.length > 0
  ReturnVariable.new(ARGV[0])
else
  puts "Usage: #$0 file.rb"
end

