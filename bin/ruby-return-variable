#!/usr/bin/env ruby

$DONTMODIFY = true
%w[return_variable return_variable/version].each do |x|
  require File.join(File.dirname(__FILE__), '..', 'lib', "#{x}.rb")
end

if File.expand_path($0) != File.expand_path(__FILE__)
  ReturnVariable.new($0)
elsif ARGV.length > 0
  ReturnVariable.new(ARGV[0])
else
  puts "Usage: #$0 file.rb"
end

